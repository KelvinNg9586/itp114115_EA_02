<div class="container mt-4">
<button class="btn btn-primary btn-lg" type="button" style="background-color: black; color: white; font-size: 20px;"><a href="{{ url_for('products') }}" style="color: inherit;">{{ _('返回') }}</a></button>
  <div class="row">
    {% for p in products %}
      <div class="col-md-6">
        <img src="{{ url_for('static', filename=p.image_url) }}" class="img-fluid mb-4" style="width: 50%">>
      </div>
      <div class="col-md-6">
        <h1>{{ p.name }}</h1>
        <p class="lead">{{ p.description }}</p>
        <h2 class="mb-4">${{ p.price }}</h2>
        <button class="btn btn-primary btn-lg mb-4">Add to Cart</button>
        {% if p.is_available %}
          <div class="alert alert-success">In Stock</div>
        {% else %}
          <div class="alert alert-danger">Out of Stock</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>