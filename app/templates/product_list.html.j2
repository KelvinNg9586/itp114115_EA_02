
{% block content %}
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <img src="{{ url_for('static', filename=products.image_url) }}" class="img-fluid mb-4">
      </div>
      <div class="col-md-6">
        <h1>{{ product.name }}</h1>
        <p class="lead">{{ product.description }}</p>
        <h2 class="mb-4">${{ product.price }}</h2>
        <button class="btn btn-primary btn-lg mb-4">Add to Cart</button>
        {% if product.is_available %}
          <div class="alert alert-success">In Stock</div>
        {% else %}
          <div class="alert alert-danger">Out of Stock</div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}